@model BiblioTech_v2.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do Usuário";
}
<section style="margin-top: 120px;">
    <h1>Detalhes</h1>

    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RA)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RA)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id"><input type="submit" value="Editar" class="btn btn-primary text-white border-0" style="width: 6rem" /></a> |
        <a asp-action="Index"><input value="Voltar" class="btn btn-primary bg-danger text-white  border-0 " style="width: 6rem" /></a>
    </div>
</section>