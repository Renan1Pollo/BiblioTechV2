@model BiblioTech_v2.Models.Livro
@{
    ViewData["Title"] = "Deletar Livro";
}
<section style="margin-top: 120px;">
    <h1>Deletar</h1>
    <br />
    <h4>Você tem certeza que deseja excluir esse registro?</h4>
    <br />
    <div>
        <h4>Livro</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdGenero)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdGenero)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sinopse)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sinopse)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Autor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Autor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Volume)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Volume)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index"><input value="Voltar" class="btn btn-primary text-white border-0 " style="width: 6rem" /></a>
        </form>
    </div>
</section>