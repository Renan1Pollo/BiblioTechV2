@model IEnumerable<BiblioTech_v2.Models.Emprestimo>

@{
    ViewData["Title"] = "Listagem de Empréstimos";
}
<section style="margin-top: 120px;">
    <h1>Listagem de Empréstimos</h1>
    <br />
    <div class="form-group">
        <a asp-action="Create"><input type="submit" value="Novo Empréstimo" class="btn btn-primary bg-success border-0" /></a>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdUsuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdLivro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataRetirada)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdLivro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataRetirada)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><input type="submit" value="Editar" class="btn btn-primary bg-warning text-white border-0" /></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><input type="submit" value="Detalhar" class="btn btn-primary border-0" /></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><input type="submit" value="Finalizar" class="btn btn-primary bg-danger border-0" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
